{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "declaration": true,
    "target": "es2015",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "mobx-state-tree": ["node_modules/@concord-consortium/mobx-state-tree/dist"]
    },
    "types": ["jest", "@testing-library/jest-dom"],
    "jsx": "react",
    "lib": [
      "dom",
      "ES2018"
    ]
  },
  "include": [
    "./src"
  ]
}
