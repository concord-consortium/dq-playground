{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strict": true,
    "paths": {
      "mobx-state-tree": ["node_modules/@concord-consortium/mobx-state-tree/dist"]
    },
    "types": ["jest", "@testing-library/jest-dom"],
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
