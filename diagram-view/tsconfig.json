{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "target": "es2015",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "sourceMap": true,
